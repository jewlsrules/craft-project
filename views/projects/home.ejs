<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include ../partials/htmlhead.ejs %>
  </head>
  <body>
    <!-- Nav bar changes based on current page, can't use partial -->
    <nav class="navbar navbar-expand-lg navbar-light sticky-top navbg">
      <a class="navbar-brand" href="#">Hook & Needle</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item active">
            <a class="nav-link" href="/projects">Your Projects<span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/projects/all">Browse</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/projects/new">New Project</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/users/<%=username%>">Profile</a>
          </li>
        </ul>
      </div>
    </nav>
    <!-- End of nav bar -->
    <div class="page">
    <% include ../partials/header1.ejs %>
      <h1 class='page-heading-text'>Your Projects</h1>
      <div class="body">
        <% for(let i = 0; i < projects.length; i++){ %>
          <% if(!projects){ %>
            <div class="no-projects-yet">
              <h1>No Projects yet! Click on "New Project" to add your first project</h1>
            </div>
          <% } else { %>
          <div class='project-display shadow p-3 mb-5 bg-white rounded'>
              <a href="/projects/<%=projects[i].id%>">
                <img src="<%=projects[i].photo%>">
              </a>
              <a class='link' href="/projects/<%=projects[i].id%>"><%=projects[i].name%></a>
            </div>
            <% }} %>
          </div>
        </div>
    <% include ../partials/footer.ejs %>
  </body>
</html>
