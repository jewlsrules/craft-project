<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
<% include ../partials/htmlhead.ejs %>
  </head>
  <body>
    <!-- Nav bar changes based on current page, can't use partial -->
    <nav class="navbar navbar-expand-lg navbar-light sticky-top navbg">
      <a class="navbar-brand" href="/projects/all">Hook & Needle</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item active">
            <a class="nav-link" href="/projects">Your Projects</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/projects/all">Browse</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href='/projects/new'>New Project</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/users/<%=user%>">Profile</a>
          </li>
        </ul>
      </div>
    </nav>
    <!-- End of nav bar -->
    <% include ../partials/login.ejs %>
    <div class="page">
      <div class="show-body">
        <div class="show-item-details">
          <div class="item-show-photo col-6">
            <img class='item-photo-show shadow p-3 mb-5 bg-white rounded' src="<%=project.photo%>">
          </div>
          <div class="item-text-details col-5">
            <h1 class='page-heading-text'><%=project.name%></h1><br>
            <% if(user !== project.user){ %>
                <p>User: <a class='link' href='/users/<%=project.user%>'><%=project.user%></a></p>
            <% } %>
            <p>Status: <%=project.status%></p>
            <%if(!project.due){%>
              <p>No Due Date</p>
            <% } else {%>
              <p>Due Date: <%=project.due%></p>
            <% } %>
            <% if(!project.pattern){ %>
              <p>No Pattern Linked</p>
            <% } else { %>
              <a class='link' href="<%=project.pattern%>">Pattern Link</a>
            <% } %>
            <% if(!project.yarn){ %>
              <p>No Yarn Linked</p>
            <% } else { %>
              <a class='link' href="<%=project.yarn%>">Yarn Link</a><br>
            <% } %>
            <% if(user === project.user){ %>
                <a class='link' href="/projects/<%=project.id%>/edit">Edit Project</a>
            <% } %>
          </div>
        </div>
      </div>
    </div>
    <% include ../partials/footer.ejs %>
  </body>
</html>
