<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
<% include ../partials/htmlhead.ejs %>
  </head>
  <body>
    <div class="page">
    <% include ../partials/header2.ejs %>
      <div class="show-body">
        <a class='link' href="/projects">< Back to All Projects</a><br>
        <div class="show-item-details">
          <div class="item-show-photo col-6">
            <img class='item-photo-show' src="<%=project.photo%>">
          </div>
          <div class="item-text-details col-5">
            <h1><%=project.name%>   </h1><br>
            <p>Status: <%=project.status%></p>
            <%if(!project.due){%>
              <p>No Due Date</p>
            <% } else {%>
              <p>Due Date: <%=project.due%></p>
            <% } %>
            <% if(!project.pattern){ %>
              <p>No Pattern Linked</p>
            <% } else { %>
              <a class='link' href="<%=project.pattern%>">Pattern Link</a>
            <% } %>
            <% if(!project.yarn){ %>
              <p>No Yarn Linked</p>
            <% } else { %>
              <a class='link' href="<%=project.yarn%>">Yarn Link</a><br>
            <% } %>
            <a class='link' href="/projects/<%=project.id%>/edit">Edit Project</a>
          </div>
        </div>
      </div>
    </div>
    <% include ../partials/footer.ejs %>
  </body>
</html>
