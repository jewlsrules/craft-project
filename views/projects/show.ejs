<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
<% include ../partials/htmlhead.ejs %>
  </head>
  <body>
    <!-- Nav bar changes based on current page, can't use partial -->
    <nav class="navbar navbar-expand-lg navbar-light sticky-top redbg">
      <a class="navbar-brand" href="#">Hook & Needle</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/projects">Your Projects</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/projects/all">Browse</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">New Project</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Profile</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Log Out - DOESNT WORK</a>
          </li>
        </ul>
      </div>
    </nav>
    <!-- End of nav bar -->
    <div class="page">
      <div class="show-body">
        <a class='link' href="/projects">< Back to All Projects</a><br>
        <div class="show-item-details">
          <div class="item-show-photo col-6">
            <img class='item-photo-show' src="<%=project.photo%>">
          </div>
          <div class="item-text-details col-5">
            <h1><%=project.name%>   </h1><br>
            <p>Status: <%=project.status%></p>
            <%if(!project.due){%>
              <p>No Due Date</p>
            <% } else {%>
              <p>Due Date: <%=project.due%></p>
            <% } %>
            <% if(!project.pattern){ %>
              <p>No Pattern Linked</p>
            <% } else { %>
              <a class='link' href="<%=project.pattern%>">Pattern Link</a>
            <% } %>
            <% if(!project.yarn){ %>
              <p>No Yarn Linked</p>
            <% } else { %>
              <a class='link' href="<%=project.yarn%>">Yarn Link</a><br>
            <% } %>
            <a class='link' href="/projects/<%=project.id%>/edit">Edit Project</a>
          </div>
        </div>
      </div>
    </div>
    <% include ../partials/footer.ejs %>
  </body>
</html>
