<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include ../partials/htmlhead.ejs %>
  </head>
  <body>
    <!-- Nav bar changes based on current page, can't use partial -->
    <nav class="navbar navbar-expand-lg navbar-light sticky-top redbg">
      <a class="navbar-brand" href="#">Hook & Needle</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/projects">Your Projects</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/projects/all">Browse</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/projects/new">New Project</a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="#">Profile<span class="sr-only">(current)</span></a>
          </li>
        </ul>
      </div>
    </nav>
    <!-- End of nav bar -->
    <div class="body">
      <h1><%=user.username%></h1>
      <% for(let i = 0; i<projects.length; i++){ %>
        <% if(!projects){ %>
          <div class="no-projects-yet">
            <h1>No Projects yet! Click on "New Project" to add your first project</h1>
          </div>
        <% } else { %>
        <div class='project-display'>
            <a href="/projects/<%=projects[i].id%>">
              <img src="<%=projects[i].photo%>">
            </a>
            <a class='link' href="/projects/<%=projects[i].id%>"><%=projects[i].name%></a>
          </div>
          <% }} %>
          <div class="pre-footer"
            <form class='logout' action="/sessions/destroy" method="post">
              <input type="submit" value="Log Out">
            </form>
          </div>
    </div>
    <% include ../partials/footer.ejs %>
  </body>
</html>
